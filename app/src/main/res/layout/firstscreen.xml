<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:maxLines = "10000"
    android:scrollbars = "vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background1"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parse_html"
        android:id="@+id/welcome5"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
         />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_button"
        fancy:fb_focusColor="#B5BFC0"
        fancy:fb_text="Log Out"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        fancy:fb_borderWidth="1dp"
        fancy:fb_radius="50dp"
        fancy:fb_textColor="@color/black"
        fancy:fb_defaultColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fancy:fb_borderColor="@color/realwhite"
         />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/data_button"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="@color/realwhite"
        fancy:fb_radius="50dp"
        fancy:fb_defaultColor="@color/black"
        fancy:fb_focusColor="#B5BFC0"
        fancy:fb_text="Check data usage"
        fancy:fb_textColor="@color/white"
        android:layout_height="45dp"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/messMenuButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/attendance_button"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_defaultColor="@color/black"
        fancy:fb_focusColor="#B5BFC0"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="@color/realwhite"
        fancy:fb_radius="50dp"
        fancy:fb_text="Attendance"
        fancy:fb_textColor="@color/white"
        android:layout_height="45dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/data_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/aboutButton"
        fancy:fb_defaultColor="@color/black"
        fancy:fb_focusColor="#B5BFC0"
        fancy:fb_text="Developers"
        fancy:fb_textColor="@color/white"
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/messMenuButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/messMenuButton"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_defaultColor="@color/black"
        fancy:fb_focusColor="#B5BFC0"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="@color/realwhite"
        fancy:fb_radius="50dp"
        fancy:fb_text="Mess Menu"
        fancy:fb_textColor="@color/white"
        android:layout_height="45dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/logout_button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

    <include layout="@layout/layout_bottom_navigation"/>

</RelativeLayout>