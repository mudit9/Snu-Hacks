<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/black_border_bottom"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_data_usage"
                android:gravity="center"
                android:drawableTint="@color/black"
                android:text="About"
                android:drawablePadding="10dp"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                fancy:fb_textSize = "15sp"
                fancy:fb_defaultColor="@color/true_white"
                fancy:fb_focusColor="#B5BFC0"
                fancy:fb_text="Log Out"
                fancy:fb_textColor="@color/text_color" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="15sp"
        android:textAlignment="center"
        android:layout_marginRight="15sp"
        android:textSize="21sp"
        android:text="Note; if at any point, the app starts crashing, please look for updates. There is a high chance the college changed the websites. thanks"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_marginTop="10sp"
        android:id="@+id/developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_text= "Developers"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#89f7fe"
        fancy:fb_textSize="34sp"
        fancy:fb_focusColor="#feada6"
        fancy:fb_textColor="#222222" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/mudit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fancy:fb_fontIconSize="20sp"
        android:paddingBottom="10dp"
        fancy:fb_iconPaddingLeft= "20sp"
        android:paddingLeft="20dp"
        fancy:fb_fontIconResource="&#xf04b;"
        fancy:fb_iconPosition="right"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        fancy:fb_text= "Mudit Saxena"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#667eea"
        fancy:fb_textSize="34sp"
        fancy:fb_focusColor="#f5efef"
        fancy:fb_textColor="#222222" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/kedia_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        fancy:fb_iconPaddingLeft= "20sp"
        fancy:fb_fontIconSize="20sp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        fancy:fb_text= "Shashvat Kedia"
        fancy:fb_borderWidth="1dp"
        fancy:fb_fontIconResource="&#xf04b;"
        fancy:fb_iconPosition="right"
        fancy:fb_defaultColor="#667eea"
        fancy:fb_textSize="34sp"
        fancy:fb_focusColor="#f5efef"
        fancy:fb_textColor="#222222" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_marginTop="10sp"
        android:id="@+id/ui_ux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_text= "UI/UX"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#89f7fe"
        fancy:fb_textSize="34sp"
        fancy:fb_focusColor="#feada6"
        fancy:fb_textColor="#222222" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/tarini_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        fancy:fb_text= "Tarini Anchan"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#667eea"
        fancy:fb_iconPaddingLeft= "20sp"
        fancy:fb_fontIconSize="20sp"
        fancy:fb_textSize="34sp"
        fancy:fb_fontIconResource="&#xf04b;"
        fancy:fb_iconPosition="right"
        fancy:fb_focusColor="#f5efef"
        fancy:fb_textColor="#222222" />

</LinearLayout>

    <include layout="@layout/layout_bottom_navigation">

    </include>

</RelativeLayout>