<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:maxLines = "10000"
    android:scrollbars = "vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgrounddown"
    tools:context=".DataUsage">

    <TextView
        android:text="DATA USAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DATAUSAGE"
        android:textSize="55sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure you're connected to the student Wifi"
        android:id="@+id/welcome"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="33dp"
        android:textAlignment="center"
        android:layout_below="@+id/DATAUSAGE"
        android:layout_centerHorizontal="true" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avielement1"
        style="@style/AVLoadingIndicatorView"
        android:visibility="gone"
        app:indicatorName="LineScalePartyIndicator"
        app:indicatorColor="@color/white"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp" />

    <com.github.lzyzsd.circleprogress.CircleProgress
        android:id="@+id/circle_progress"
        app:circle_max="100"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        fancy:circle_finished_color="#13c000"
        fancy:circle_unfinished_color="#1eea08" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"

        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"

        fancy:fb_textColor="@color/white"
        fancy:fb_defaultColor="@color/black"
        fancy:fb_focusColor="#B5BFC0"
        fancy:fb_borderWidth="3dp"
        fancy:fb_borderColor="@color/realwhite"
        fancy:fb_radius="50dp"
        fancy:fb_text="@string/html_button"
        android:layout_height="wrap_content"
        android:id="@+id/data_usage_button"
        android:textColor="@color/white"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

<include layout="@layout/layout_bottom_navigation"/>


    </RelativeLayout>