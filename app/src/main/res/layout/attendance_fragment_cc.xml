<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#082873"
    android:id="@+id/parent_layout_here2">


    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_to_refresh2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/totalAttendance"
                android:textSize="18sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_below="@+id/totalAttendance"
                android:id="@+id/line"
                android:background="@color/true_white"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"

                android:id="@+id/attendance_recycler_view2"
                android:visibility="gone"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/empty_text_view2"
                android:text="Unable to connect to Student Wifi :("
                android:layout_centerInParent="true"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


</android.support.constraint.ConstraintLayout>