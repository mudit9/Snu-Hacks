<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6f7c85"
        android:layout_marginBottom="60dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewpager_margin"
            android:layout_gravity="center_vertical|center"
            android:background="@drawable/white_grey_border_bottom"

            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:drawableLeft="@drawable/ic_data_usage"
                    android:gravity="center|right|center_vertical"
                    android:id="@+id/heading"
                    android:text="Data Usage"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    fancy:fb_textSize = "15sp"
                    fancy:fb_defaultColor="@color/true_white"
                    fancy:fb_focusColor="#B5BFC0"
                    fancy:fb_text="Log Out"
                    fancy:fb_textColor="@color/text_color" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
        <ProgressBar
            android:id="@+id/ProgressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="8dip"
            android:minHeight="8dip"
            android:progress="0"
            android:progressDrawable="@drawable/greenprogress" />

        <com.github.lzyzsd.circleprogress.CircleProgress
            android:id="@+id/circle_progress"
            app:circle_max="100"
            android:layout_marginTop="40sp"
            android:layout_gravity="center"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            fancy:circle_finished_color="#13547a"
            fancy:circle_unfinished_color="#80d0c7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make sure you're connected to the student Wifi"
            android:id="@+id/welcome"
            android:layout_gravity="center"
            android:textColor="@color/true_white"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
     />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_button"
            android:text="Ads"/>


    </LinearLayout>

    <include layout="@layout/layout_bottom_navigation"/>

</RelativeLayout>